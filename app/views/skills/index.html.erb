  <div class="content-wrapper">
    <section class="content-header">
    </section>
    <section class="content">
      <div class="row">
        <div class="col-md-12">
        </div>
      </div>
      <div class="row">
          <!-- TABLE: LATEST ORDERS -->
          <div class="col-md-8"> 
            <div class="">
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Skills</h3>

                  <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                  </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <div class="table-responsive">
                    <table class="table no-margin">
                      <thead>
                      <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Description</th>
                        <td colspan="2"></td>
                      </tr>
                      </thead>
                      <tbody>
                      <% @skills.each do |skill| %>
                      <tr>
                        <td><i class="<%= skill.icon %>"></i></td>
                        <td><%= skill.title %></td>
                        <td><%= skill.description %></td>
                        <td>
                        <%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_skill_path(skill), class: 'btn btn-warning btn-xs' %>
                        <%= link_to "<i class='fa fa-trash'></i>".html_safe, skill, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %> 
                        </td>
                      </tr>
                      <% end %>

                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>

                <!-- /.box-footer -->
              </div>
            </div>
          </div>
          <div class="col-md-4">
          <div class="box box-default">
            <div class="box-header with-border">
              <h3 class="box-title">New Skill</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row">
                <div class="col-md-12">
                <%= form_for @skill, url: { controller: "skills", acction: "create" } do |form| %>
                 <div class="form-group">
                 <%= form.text_field :title, class: 'form-control', placeholder: 'Skill title...' %>
                 </div>

                 <div class="form-group">
                  <%= form.text_field :icon, class: 'form-control', placeholder: 'Icon code...' %>
                 </div>

                 <div class="form-group">
                  <%= form.text_area :description, class: 'form-control', placeholder: 'Description...' %>
                 </div>

                 <div class="form-group">
                  <%= form.submit 'Create new skill', class: 'btn btn-block btn-primary' %>
                 </div>
               <% end %>
              </div>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </section>
